<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
    http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1-set-up-test-db" author="moe">
        <createTable tableName="test">
            <column name="test_id" type="bigint">
                 <constraints primaryKey="true" nullable="false" primaryKeyName="test_id_pk"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="number" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="1-set-up-test-sequencer" author="moe">
        <createSequence sequenceName="test_id_seq"
                        dataType="bigint"
                        incrementBy="1"
                        startValue="100"/>
    </changeSet>

</databaseChangeLog>