<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
    http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="17-create-event-table" author="moe">
        <createTable tableName="event">
            <column name="event_id" type="bigint">
                <constraints primaryKey="true" nullable="false" primaryKeyName="event_id_pk"/>
            </column>
            <column name="title" type="varchar(255)"/>
            <column name="fk_image" type="bigint"/>
            <column name="start_date_time_in_utc" type="bigint"/>
            <column name="end_date_time_in_utc" type="bigint"/>
            <column name="fk_event_location" type="bigint"/>
            <column name="fk_category" type="bigint"/>
        </createTable>
        <createSequence sequenceName="event_id_seq"
                        dataType="bigint"
                        incrementBy="1"
                        startValue="100"/>
    </changeSet>

    <changeSet author="Arthur" id="create_VotingPartialResult_table">
        <createTable tableName="VotingPartialResult">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="eventName" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="percentage" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>